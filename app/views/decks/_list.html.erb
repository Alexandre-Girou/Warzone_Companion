<div>
  <h1>My decks</h1>
</div>
<div class="cards">
  <div class="card">
    <% @decks.each do |deck| %>
      <div class="card-selector">
        <div class="card-title">
          <div class="toggle-info details">
            <span class="left"></span>
            <span class="right"></span>
          </div>
        <h2><%= deck.name %></h2>
        </div>
        <div class="hid-content hidden">
          <div class="card_image-holder">
            <img class="card_image" src="https://img.gfinityesports.com/news/image/7/1/1500x0-nc/how_to_win_call_of_duty_warzone_AiwLTH3.jpg" />
          </div>
          <div class="card-description">
            <%= deck.favorites %>
          </div>
          <div class="card-actions">
            <%= link_to "View More", deck_path(deck.id), class: "details" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>