<h1>All tips</h1>


<div class= "show text-center">
  <div class="row">
    <% @cards.each do |card| %>
      <div class="col-12 col-md-3">
        <div class=<%#CLASSE DES CARTES%>>
          <p><strong>Name : <%= card.title %></strong></p>
          <p><strong>Brought to you by : <%= card.creator.username %></strong></p>
        </div>
      </div>
    <% end %>
  </div>
</div>















