<h1>All tips</h1>

<%= form_tag cards_path, method: :get do %>
  <%= select_tag :category,
    options_for_select(['Tricks', 'Weapons']),
    class: "form-control",
    placeholder: "Find a movie"
  %>
  <%= select_tag :level,
    options_for_select(['Beginner', 'Intermediate', 'Confirmed']),
    class: "form-control",
    placeholder: "Find a movie"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<ul>
  <% @cards.each do |card| %>
    <li>Name : <%= card.title %></li>
  <% end %>
</ul>

<div class= "show text-center">
  <div class="row">
    <% @cards.each do |card| %>
      <div class="col-12 col-md-3">
        <div class=<%#CLASSE DES CARTES%>>
          <p><strong>Name : <%= card.title %></strong></p>
          <p><strong>Brought to you by : <%= card.creator.username %></strong></p>
        </div>
      </div>
    <% end %>
  </div>
</div>















