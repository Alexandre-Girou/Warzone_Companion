<div>
  <h1>All tips</h1>
</div>
<div class="cards">
  <div class="card">
    <% @cards.each do |card| %>
      <div class="card-selector">
        <div class="card-title">
          <div class="toggle-info details">
            <span class="left"></span>
            <span class="right"></span>
          </div>
        <h2><%= card.title %></h2>
        </div>
        <div class="hid-content hidden">
          <div class="card_image-holder">
            <%= cl_image_tag card.photo.key, max_width: 250, crop: :fill %>
          </div>
          <div class="card-description target">
            <%= card.content %>
          </div>
          <div class="card-actions">
            <%= link_to "View More", card_path(card.id), class: "details" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="button-index" id="rounded-btn">
  <%= link_to "Create Card", new_card_path, class: 'btn-index' %>
</div>

<% content_for :meta_title, "#{@cards.last.title} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @cards.last.content %>
<% content_for :meta_image, cl_image_path(@cards.last.photo.key) %>